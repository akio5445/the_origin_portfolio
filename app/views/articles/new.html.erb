<% if @article.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li class="errors"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <%= form_with model: @article, url: :articles, local: true do |f| %>
    <p><%= f.label :タイトル %></p>
    <p><%= f.text_field :title, class: "text_field_title" %></p>
    <p><%= f.label :記事 %></p>
    <p><%= f.text_area :description %></p>
    <p><%= f.submit "登録する", class: "button" %></p>
  <% end %>
</div>