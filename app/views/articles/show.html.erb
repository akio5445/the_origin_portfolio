<h1>Articles#show</h1>


<%= @article.title %>
<%= @article.description %>

<%= render "favorites/favorite", article: @article %>


<div id="article_comments_area">
  <!-- 投稿されたコメント一覧を表示 -->
  <%= render partial: 'article_comments/index', locals: { article_comments: @article_comments } %>
</div>
  <div>
<% if logged_in? %>
    <!-- コメント入力欄 -->
    <%= render partial: 'article_comments/form', locals: { article_comment: @article_comment, article: @article } %>
<% end %>
  </div>
