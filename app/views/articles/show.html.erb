
<div class="container">
  <div class="container_article">
    <h3 class="article_title"><%= @article.title %></h3>
    <div class="article_body_show"><%= @article.description %></div><hr>

    <div id="article_comments_area">
      <!-- 投稿されたコメント一覧を表示 -->
      <%= render partial: 'article_comments/index', locals: { article_comments: @article_comments } %>
    </div>
    <div>
      <% if logged_in? %>
        <!-- コメント入力欄 -->
        <%= render partial: 'article_comments/form', locals: { article_comment: @article_comment, article: @article } %>
      <% end %>
    </div>
  </div>

  <div class="container_index">
    <%= render "articles/index", articles: @articles %>
  </div>
</div>