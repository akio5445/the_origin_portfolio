<h1>Articles#index</h1>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article, class: "" %></td>
      <td><%= article.body %></td>
      <td><p>コメント数: <%= ArticleComment.where(article_id: article.id).count %></p></td>
    </tr>
  <% end %>
  </tbody>
</table>