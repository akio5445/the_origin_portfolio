<div id="article_comments_area">
  <% article_comments.each do |article_comment| %>
    <% unless article_comment.id.nil? %>
    <div>
      <span><%= "@#{article_comment.user.name}さん(; ･`д･´)φメモメモ" %></span>
      <p><%= toc(article_comment.content) %><%= markdown(article_comment.content) %></p>
    </div>
      <% if article_comment.user == current_user %>
        <p><%= link_to 'Delete', article_article_comment_path(article_comment.article_id, article_comment.id), method: :delete, remote: true, id: "delete_button" %></p>
      <% end %>
    <% end %>
  <% end %>
</div>