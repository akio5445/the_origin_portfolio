<div class="container">
  <div class="container_article">
    <% @articles.each do |article| %>
      <h3 class="article_title"><%= link_to article.title, article_path(article) %></h3>
      <div class="article_body"><%= article.description %></div>
      <div class="comment">コメント数: <%= ArticleComment.where(article_id: article.id).count %>
        <div class="article_<%= article.id %>">
          <!-- いいね機能 -->
          <%= render 'articles/favorite', article: article %>
        </div>
      </div>
      <div>
        <hr>
        <!-- ページネーション -->
        <%= paginate @articles %>
      </div>
    <% end %>
  </div>
  <div class="container_index">
    <%= render "shared/sns" %>
  　　　　  <!-- 検索フォーム -->
    <%= render "articles/search", articles: @articles %>
  </div>
</div>